<launch>
	<!-- ARGS -->
  <arg name="sim" default="true" />
  <arg name="db" default="false" />
  <arg name="db_path" default="$(find myworkcell_moveit_config)/default_warehouse_mongo_db" />
  <arg name="debug" default="false" />
  <arg name="use_gui" default="false" />

	<!-- PARAMS + ROSPARAMS -->


	<!-- INCLUDES -->
  <include file="$(find mywrkcell_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

  <include file="$(find myworkcell_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="false"/>
  </include>

  <include file="$(find myworkcell_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <include file="$(find RA_hardware_interface)/launch/RA_position_trajectory_controllers.launch" if="$(eval sim == false)"/>

	<!-- NODES -->
	<node pkg="tf" type="static_transform_publisher" name="virtual_joint_broadcaster_0" args="0 0 0 0 0 0 odom_combined base_link 100" />

	<node pkg="ra_tools" name="ra_tools_go_to_position_node" type="go_to_position_node.py" respawn="false" output="screen"/>

</launch>
